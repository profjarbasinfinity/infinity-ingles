        function checkMission() {
            const getV = (id) => document.getElementById(id).value.trim().toLowerCase();

            // Valida√ß√£o das respostas conforme gabarito do Professor
            const c1 = (getV('q1f').includes("o policial ajudou a idosa")) && (getV('q1o').includes("officer") && getV('q1o').includes("lady"));
            const c2 = (getV('q2f').includes("o professor tem uma guitarra"));
            const c3 = (getV('q3f').includes("o fermento est√° na dispensa"));
            const c4 = (getV('q4f').includes("eu comprei meu estepe na feira"));
            const c5 = (getV('q5f').includes("n√≥s plugamos a tv na extens√£o"));

            if(c1 && c2 && c3 && c4 && c5) {
                localStorage.setItem('m9_complete', 'true');
                confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 } });
                document.getElementById('success-screen').style.display = 'flex';
