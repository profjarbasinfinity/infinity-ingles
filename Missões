    <script>
        function checkMission() {
            const answers = {
                q1: 'it',
                q2: 'he',
                q3: 'she',
                q4: 'she',
                q5: 'it',
                q6: 'she',
                q7: 'it',
                q8: 'he'
            };

            let allCorrect = true;
            for (let i = 1; i <= 8; i++) {
                if (document.getElementById(`q${i}`).value !== answers[`q${i}`]) {
                    allCorrect = false;
                    break;
                }
            }

            if(allCorrect) {
                localStorage.setItem('m6_complete', 'true');
                confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 } });
                document.getElementById('success-screen').style.display = 'flex';
            } else {
                alert("Alguma an√°lise n√£o est√° correta. Lembre-se: 'ele' ou 'ela' para coisas sem √≥rg√£o reprodutor √© IT!");
            }
        }
    </script>
